<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-md-6" style="margin: 0 auto">
    <div class="mb-3">
      <%= form.text_field :amount, class:"form-control", placeholder: "Amount" %>
    </div>

    <div class="mb-3">
      <%= form.date_field :odate, class:"form-control", placeholder: "Date" %>
    </div>

    <div class="mb-3">
      <%= form.text_field :description, class:"form-control", placeholder: "Description" %>
    </div>

    <div class="mb-3">
      <!--<%= form.label :type, style: "display: block" %>-->
      <%= form.select :otype, Operation.otypes.keys, class:"form-select"  %>
    </div>
    <br/>

    <!--<div>
      <%= form.label :category_id, style: "display: block" %>
      <%= form.text_field :category_id %>
    </div>-->

    <div class="mb-3">
      <%= select(:operation, :category_id, options_for_select(@categories)) %>
    </div>

    <br/>
    <div>
      <%= form.submit class:"btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>


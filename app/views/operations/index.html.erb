<p style="color: green"><%= notice %></p>

<h2 style="text-align: center; margin: 15px auto">Transactions</h2>

<table id="operations" class="table table-striped table-bordered"> 
  <thead> 
    <tr style = "background-color:#e3f2fd"> 
      <th scope="col">#</th> 
      <th scope="col">Category</th> 
      <th scope="col">Type</th> 
      <th scope="col">Amount</th>
      <th scope="col">Date</th> 
      <th scope="col">Description</th> 
      <th scope="col">Direction</th>
    </tr> 
  </thead> 
  <tbody> 
   
   <%n = 1 %> 
   <% category_name_hash = Category.pluck(:id, :name).to_h %>
   
  <% @operations.each do |operation| %> 
   <tr> 
      <th scope="row"><%= n %></th> 
      <td><%=category_name_hash[operation.category_id]%></td> 
      <td><%=operation.otype%></td>
      <td><%=operation.amount%></td>
      <td><%=operation.odate%></td>
      <td><%=operation.description%></td>
      <td>
        <%= link_to "show", operation, class:"btn btn-outline-info btn-sm" %>
      </td>
  </tr> 
  <% (n += 1) %> 
  <% end %> 
   
  </tbody> 
   
</table> 
 
<br/> 
<br/>   

<%= link_to "New transaction", new_operation_path, class:"btn btn-outline-info" %>
<br/> 
<br/>  

<%= paginate @operations %>





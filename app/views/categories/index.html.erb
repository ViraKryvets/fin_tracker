<p style="color: green"><%= notice %></p>
 
<h2 style="text-align: center; margin: 15px auto">Categories</h2> 
 
<table id="categories" class="table table-striped table-bordered"> 
  <thead> 
    <tr style = "background-color:#e3f2fd"> 
      <th scope="col">#</th> 
      <th scope="col">Name</th> 
      <th scope="col">Description</th> 
      <th scope="col">Direction</th> 
    </tr> 
  </thead> 
  <tbody> 
   
   <%n = 1 %> 
   
  <% @categories.each do |category| %> 
   <tr> 
      <th scope="row"><%= n %></th> 
      <td><%=category.name %></td> 
      <td><%=category.description%></td> 
      <td><%= link_to "Show", category, class:"btn btn-outline-info btn-sm" %></td> 
  </tr> 
  <% (n += 1) %> 
  <% end %> 
   
  </tbody> 
   
</table> 
 
<br/> 
<br/>   
 
<%= link_to "New category", new_category_path, class: "btn btn-outline-info" %>
